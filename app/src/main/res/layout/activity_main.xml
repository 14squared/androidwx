<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_day_clear"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/getLocBtn"
        android:layout_width="114dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="GetLocation"
        android:text="@string/get_loc"
        app:layout_constraintEnd_toStartOf="@+id/getWxBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getWxBtn"
        android:layout_width="124dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="getWeather"
        android:text="@string/req_wx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/getLocBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/longForecastView"
        android:layout_width="359dp"
        android:layout_height="298dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tempView"
        android:layout_width="209dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="32"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_light"
        android:textSize="70sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getWxBtn" />

    <TextView
        android:id="@+id/shortForecastView"
        android:layout_width="205dp"
        android:layout_height="36dp"
        android:fontFamily="sans-serif-light"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_light"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempView"
        tools:text="tonight" />

    <TextView
        android:id="@+id/nameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shortForecastView" />

</androidx.constraintlayout.widget.ConstraintLayout>